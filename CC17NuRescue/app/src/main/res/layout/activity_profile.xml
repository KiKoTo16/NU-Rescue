<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baby_blue"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/blue_grotto">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/profileDp"
                android:layout_centerInParent="true"
                android:background="@drawable/no_profile_pic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcome"
                android:layout_below="@id/profileDp"
                android:hint="Loading..."
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="133dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/profile"
                    android:background="@drawable/ic_profile"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fullname"
                    android:layout_alignStart="@id/profile"
                    android:hint="Loading..."
                    android:layout_marginStart="50dp"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/namediv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/fullname"
                    android:background="@android:color/darker_gray"/>

                <ImageView
                    android:layout_below="@+id/namediv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/emailicon"
                    android:background="@drawable/ic_email"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_alignStart="@id/emailicon"
                    android:hint="Loading..."
                    android:layout_below="@+id/namediv"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/emaildiv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/email"
                    android:background="@android:color/darker_gray"/>

                <ImageView
                    android:layout_below="@+id/emaildiv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/bdayicon"
                    android:background="@drawable/ic_birthday"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bday"
                    android:layout_alignStart="@id/bdayicon"
                    android:hint="Loading..."
                    android:layout_below="@+id/emaildiv"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/bdaydiv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/bday"
                    android:background="@android:color/darker_gray"/>

                <ImageView
                    android:layout_below="@+id/bdaydiv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/gendericon"
                    android:background="@drawable/ic_gender"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:layout_alignStart="@id/gendericon"
                    android:hint="Loading..."
                    android:layout_below="@+id/bdaydiv"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/genderdiv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/gender"
                    android:background="@android:color/darker_gray"/>

                <ImageView
                    android:layout_below="@+id/genderdiv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/phoneicon"
                    android:background="@drawable/ic_mobile"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:layout_alignStart="@id/phoneicon"
                    android:hint="Loading..."
                    android:layout_below="@+id/genderdiv"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/phonediv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/phone"
                    android:background="@android:color/darker_gray"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pbar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="10dp"
                    android:visibility="gone"
                    />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        android:background="@color/blue_grotto"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_bar"/>


</RelativeLayout>